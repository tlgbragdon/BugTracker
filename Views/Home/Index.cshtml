        </div>*@
    <!-- /.box-header -->
    <div class="box-body">
        <div class="row">
            <div class="col-md-6">
                <div class="logo-font logo-xlg">
                    BugTracker
                </div>
                <div class="splash-page">
                    <a href="#features">
                        <span class="fa-stack fa-2x">
                            <i class="fa fa-circle fa-stack-2x text-purple" aria-hidden="true"></i>
                            <i class="fa fa-dashboard fa-stack-1x fa-inverse" aria-hidden="true"></i>
                        </span> Features
                    </a>
                    <p>
                        <a href="#hood">
                            <span class="fa-stack fa-2x">
                                <i class="fa fa-circle fa-stack-2x text-purple" aria-hidden="true"></i>
                                <i class="fa fa-cogs fa-stack-1x fa-inverse" aria-hidden="true"></i>
                            </span> Under The Hood
                        </a>
                    </p>
                    <p>
                        <a href="#demo">
                            <span class="fa-stack fa-2x">
                                <i class="fa fa-circle fa-stack-2x text-purple" aria-hidden="true"></i>
                                <i class="fa fa-desktop fa-stack-1x fa-inverse" aria-hidden="true"></i>
                            </span> Try the Demo
                        </a>
                    </p>

                </div>
            </div>
            <div class="col-md-6">
                <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                        <li data-target="#carousel-example-generic" data-slide-to="1" class=""></li>
                        <li data-target="#carousel-example-generic" data-slide-to="2" class=""></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="item active">
                            <img src="~/images/pexels-rubiks.jpg" alt="Resolve Issues" height="400">

                            <div class="carousel-caption">
                                <h3>Track and Resolve issues quickly</h3>
                            </div>
                        </div>
                        <div class="item">
                            <img src="~/images/pexels-roleplay.jpg" alt="Role-based Permissions" height="400">

                            <div class="carousel-caption">
                                <h3>Role-based permissions</h3>
                            </div>
                        </div>
                        <div class="item">
                            <img src="~/images/pexels-conversation.jpg" alt="Capture Comments" height="400">

                            <div class="carousel-caption">
                                <h3>Capture all discussions</h3>
                            </div>
                        </div>
